<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="VirtualPet.SettingsPage">
    <StackLayout  BackgroundColor="#265a43">
        <!-- Place new controls here -->
        
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Button Text="Save"
                    HorizontalOptions="Start"
                    VerticalOptions="CenterAndExpand"
                    TextColor="#5A854D"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Clicked="SettingsQuit"/>
            <Image VerticalOptions="CenterAndExpand"
               HorizontalOptions="FillAndExpand"
               Source="AppLogo"
               BackgroundColor="Transparent"
               Aspect="AspectFit"></Image>
            <Entry Text=""
                   Placeholder="My Pet Name"
                  
                   PlaceholderColor="#ffffff"
                   TextColor="#000000"
                   HeightRequest="50"
                   x:Name="nameEntry"
                   IsTextPredictionEnabled="False"/>
            <Label Text="Settings"
                   HorizontalOptions="CenterAndExpand"></Label>
            </StackLayout>
    </StackLayout>
</ContentPage>
